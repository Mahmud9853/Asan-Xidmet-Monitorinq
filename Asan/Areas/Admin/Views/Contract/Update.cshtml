@model Contract
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body ">
                <div class="d-flex justify-content-between">

                    <h4 class="card-title">UPDATE</h4>

                    @Html.Raw(Model.Svg)
                </div>

                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Svg" for="exampleInputName1"></label>
                        <input asp-for="Svg" class="form-control">
                        <span asp-validation-for="Svg"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" for="exampleInputName1"></label>
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Text" for="exampleInputName1"></label>
                        <input asp-for="Text" type="text" class="form-control" id="exampleInputName1">
                        <span asp-validation-for="Text"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" ></label>
                        <textarea rows="6" asp-for="Description" type="text" id="DescriptionId" class="form-control"></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2 my-2">Submit</button>
                    <button class="btn btn-light" asp-controller="Contract" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}