
@model List<Contract>
<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body ">
                <div class="d-flex justify-content-end">
                    <a asp-action="Create" class="btn btn-outline-info  btn-rounded">Create</a>
                </div>
                <div class="table-responsive">
                    <table class="  table table-striped " >
                        <thead>
                            <tr>
                                <th class="w-25">
                                    Svg
                                </th>
                                <th>
                                    Text
                                </th>

                                <th class=" d-flex justify-content-end">
                                    Action
                                </th>

                            </tr>
                        </thead>
                        <tbody id="tbody">
                            @foreach (Contract item in Model)
                            {

                                <tr>
                                    <td>
                                        @Html.Raw(item.Svg)
                                    </td>

                                    <td>

                                        @item.Text
                                        @*@item.Title*@
                                    </td>

                                    <td>
                                        <a class="btn btn-outline-info  btn-rounded" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                                        <a class="btn btn-outline-danger btn-rounded" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        <a class="btn btn-outline-success  btn-rounded" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                 
                </div>
            </div>
        </div>
    </div>
</div>
