@model Contact

@{
    ViewData["Title"] = "Index";
}

<main class="my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12 my-4">
                <h1 style="font-family: 'Noto Sans';
                font-style: normal;
                font-weight: 700;
                font-size: 24px;
                line-height: 28px;
                color: #383838;">
                    Əlaqə
                </h1>
            </div>

            <div class="col-md-4">
                <ul class="list-style-none" style="list-style:none;font-family: 'typeecon';
                font-style: normal;
                font-weight: 400;
                font-size: 16px;
                line-height: 48px;
                color: #000;">
                    <li><span style="margin-right: 10px;">@Html.Raw(Model.PhoneSvg)</span>@Model.PhoneNumber</li>
                    <li><span style="margin-right: 10px;">@Html.Raw(Model.PhoneCenterSvg)</span>@Model.PhoneCenter</li>
                    <li><span style="margin-right: 10px;">@Html.Raw(Model.EmailCenterSvg)</span>@Model.EmailCenter</li>
                    <li><span style="margin-right: 10px;">@Html.Raw(Model.EmailAsanSvg)</span>@Model.EmailAsan</li>

                </ul>

            </div>
            <div class="col-md-4">
                <ul class="list-style-none" style="list-style:none;font-family: 'typeecon';
                font-style: normal;
                font-weight: 400;
                font-size: 16px;
                line-height: 48px;
                color: #000;">
                    <li>
                        <span style="margin-right: 10px;">@Html.Raw(Model.LocationSvgFirst)</span>
                        @Model.LocationFirst
                    </li>
                    <li>
                        <span style="margin-right: 10px;">@Html.Raw(Model.LocationSvgTwo)</span>
                        @Model.LocationTwo
                    </li>


                </ul>

            </div>
            <div class="col-md-4">
                <img src="~/img/@Model.Image" class="w-100" alt="Alternate Text" />
            </div>

        </div>
    </div>
    <a class="btn btn-outline-info mx-2 btn-rounded" asp-controller="Contact" asp-action="Index">go Back</a>
</main>


