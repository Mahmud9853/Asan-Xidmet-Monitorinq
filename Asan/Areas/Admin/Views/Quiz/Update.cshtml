@model Quiz
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body ">
                <div class="d-flex justify-content-between">

                    <h4 class="card-title">UPDATE</h4>
                    <img src="~/img/@Model.Image" class=" w-25" alt="Alternate Text" />

                </div>

                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo" for="exampleInputName1"></label>
                        <input asp-for="Photo" class="form-control">
                        <span asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Number" for="exampleInputName1"></label>
                        <input asp-for="Number" type="text" class="form-control" id="exampleInputName1">
                        <span asp-validation-for="Number"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Question" for="exampleInputName1"></label>
                        <input asp-for="Question" type="text" class="form-control" id="exampleInputName1">
                        <span asp-validation-for="Question"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Answer" for="exampleInputName1"></label>
                        <textarea asp-for="Answer" rows="6" type="text" class="form-control"></textarea>
                        <span asp-validation-for="Answer"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2 my-2">Submit</button>
                    <button class="btn btn-light" asp-controller="Quiz" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}