@model Header
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body ">
                <div class="d-flex justify-content-between">

                    <h4 class="card-title">UPDATE</h4>

                    <img src="~/img/@Model.Image" alt="Alternate Text" />
                </div>

                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo" for="exampleInputName1"></label>
                        <input asp-for="Photo" class="form-control">
                        <span asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" for="exampleInputName1"></label>
                        <input asp-for="Title" type="text" class="form-control" id="exampleInputName1">
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Svg" for="exampleInputName1"></label>
                        <input asp-for="Svg" type="text" class="form-control" id="exampleInputName1">
                        <span asp-validation-for="Svg"></span>
                    </div>      
                    <div class="form-group">
                        <label asp-for="Text" for="exampleInputName1"></label>
                        <input asp-for="Text" type="text" class="form-control" id="exampleInputName1">
                        <span asp-validation-for="Text"></span>
                    </div>       
                    <div class="form-group">
                        <label asp-for="Phone" for="exampleInputName1"></label>
                        <input asp-for="Phone" type="text" class="form-control" id="exampleInputName1">
                        <span asp-validation-for="Phone"></span>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2 my-2">Submit</button>
                    <button class="btn btn-light" asp-controller="Header" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
