@model Connect
@{
    ViewData["Title"] = "Detail";
}

<div class="container ">
    <div class="row d-flex justify-content-around mb-5 p-3">
        <h1 class="text-center mb-5" style="font-size:20px;">Müraciət Haqqında</h1>
        <div class="col-md-6">
            <div class="my-1">
                Telefon :@Model.Phone
            </div>
            <div class="my-1">
                Ad və Soyadı: @Model.FullName
            </div>
            <div class="my-1">
                Göndərilmə tarixi:@Model.CreateTime.ToString("dd/MMMM/yyyy H:mm:ss")
            </div>
            <div class="my-1">
                Email ünvanı:@Model.Email

            </div>
        </div>
        <div class="col-md-6">

            <div class="col-md-12 text-center">
                @Model.Text
            </div>

        </div>

    </div>
</div>
<a class="btn btn-outline-info mx-2 btn-rounded" asp-controller="Connect" asp-action="Index">go Back</a>
