@model List<UserVM>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body ">
                <div class="d-flex justify-content-end">
                    <a asp-action="Create" class="btn btn-outline-info  btn-rounded">Create</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped ">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    FullName
                                </th>
                                <th>
                                    UserName
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Role
                                </th>
                                <th>
                                    Statuse
                                </th>
                                <th class=" d-flex justify-content-end">
                                    Action
                                </th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserVM item in Model)
                            {

                            <tr>
                                <td>
                                    @if (item.Image != null)
                                    {
                                        <img src="~/img/@item.Image" alt="avatar" class="rounded-circle img-fluid" style="width: 35px;">
                                    }
                                    else
                                    {
                                        <img src="~/img/user.png" alt="avatar" class="rounded-circle img-fluid" style="width: 35px;">
                                    }
                                </td>
                                <td>
                                    @item.FullName
                                </td>

                                <td>
                                    @item.UserName
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.Role
                                </td>
                                <td>
                                    @if (item.IsDeactive)
                                    {
                                        <div>Deaktiv</div>
                                    }
                                    else
                                    {
                                        <div>Aktiv</div>
                                    }
                                </td>
                                <td style="width:44%;">
                                    <a class="btn btn-outline-info  btn-rounded" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                                    @if (item.UserName != User.Identity.Name)
                                    {

                                        @if (item.IsDeactive)
                                        {
                                            <a class="btn btn-outline-danger  btn-rounded" asp-action="Activity" asp-route-id="@item.Id">Deactivate</a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-outline-success  btn-rounded" asp-action="Activity" asp-route-id="@item.Id">Activate</a>
                                        }
                                    }
                                    <a class="btn btn-outline-success  btn-rounded" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-outline-success  btn-rounded" asp-action="ResetPassword" asp-route-id="@item.Id">ResetPassword</a>
                                </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
