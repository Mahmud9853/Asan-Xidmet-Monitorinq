@model List<Slider>
<div class="row" id="Placeholderhere">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body ">
                <div class="d-flex justify-content-end">
                    <a asp-action="Create" class="btn btn-outline-info  btn-rounded">Create</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped ">
                        <thead>
                            <tr>
                                <th class="w-25">
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th class=" d-flex justify-content-end">
                                    Action
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Slider item in Model)
                            {

                                <tr>

                                    <td>
                                        <img src="~/img/@item.Image" class="w-50" />
                                    </td>
                                    <td style="width:50%;">
                                        @item.Title.Substring(0, 48) ...
                                        @*@item.Title*@
                                    </td>
                                    <td>
                                        <a class="btn btn-outline-danger mx-2 btn-rounded" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        <a class="btn btn-outline-info  btn-rounded" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                                        <a class="btn btn-outline-success  btn-rounded" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
