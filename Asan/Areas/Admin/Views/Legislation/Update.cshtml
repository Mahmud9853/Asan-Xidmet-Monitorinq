@model Legislation
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body ">
                <div class="d-flex justify-content-between">

                    <h4 class="card-title">UPDATE</h4>

                    @Html.Raw(Model.Attachment)
                </div>

                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group my-2">
                        <label asp-for="File" for="exampleInputName1"></label>
                        <input asp-for="File" class="form-control">
                        <span asp-validation-for="File"></span>
                    </div>
                    <div class="form-group my-2">
                        <label asp-for="Title" for="exampleInputName1"></label>
                        <input asp-for="Title" type="text" class="form-control" id="exampleInputName1">
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group my-2">
                        <label asp-for="Svg" for="exampleInputName1"></label>
                        <input asp-for="Svg" type="text" class="form-control" id="exampleInputName1">
                        <span asp-validation-for="Svg"></span>
                    </div>
                    <select name="legislationCategoryId" class="form-select w-100 p-2 mb-4 text-center" aria-label="Default select example">
                        <option selected>--Category--</option>
                        @foreach (LegislationCategory category in ViewBag.Categories)
                        {
                            if (Model.LegislationCategoryId == category.Id)
                            {
                                <option selected value="@category.Id">@category.Title</option>

                            }
                            else
                            {
                                <option value="@category.Id">@category.Title</option>

                            }


                        }
                    </select>
                    <button type="submit" class="btn btn-primary mr-2 my-2">Submit</button>
                    <button class="btn btn-light" asp-controller="Legislation" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}