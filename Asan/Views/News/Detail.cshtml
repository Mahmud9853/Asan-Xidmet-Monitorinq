@model News
@{
    ViewData["Title"] = "Detail";
}
<div class="container-fluid">
    <div class="row">
        <h1 class="my-5">Xəbərlər</h1>
        <div class="col-md-6">
            <h1 class="my-4" style="font-family: 'Noto Sans'; font-style: normal; font-weight: 700; font-size: 16px; line-height: 22px; color: #383838;">@Model.Title</h1>
            <p style="font-family: 'Noto Sans'; font-style: normal; font-weight: 200; font-size: 16px; line-height: 22px; color: #383838;">@Html.Raw(Model.Description)</p>
        </div>
        <div class="col-md-6 my-5">
            <img src="~/img/@Model.Image"  class="w-100" alt="Alternate Text" />
        </div>
    </div>
</div> 


