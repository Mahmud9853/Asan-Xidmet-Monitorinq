@model Contract
<div id="partialModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content model" style="width: 140vh; height: 100vh; text-align: center; margin-left: -256px; ">
            <div class="modal-header">
                <h5 class="modal-title" style="color:deepskyblue">@Model.Title</h5>
                <a href="#" id="close" class="close" data-dismiss="modal" aria-label="Close">
                    @*<span ></span>*@
                    <i class="fa-sharp fa-solid fa-xmark"></i>
                </a>
            </div>
            <div class="container">
                <div class="row">
                    <div class="modal-body title">
                        <div class="col-md-12" > <p>@Html.Raw(Model.Description)</p></div>

                    </div>
                </div>
            </div>
