
@{
    ViewData["Title"] = "Home Page";
}
@model HomeVM

<section style="background-color: #ffff;">
    <div class="container">
        <div class="row">
            <div>


                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        @foreach (Slider slider in Model.Sliders)
                        {

                            <div class="carousel-item active">
                                <img src="~/img/@slider.Image" class="d-block w-100">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5 style="font-family: 'Noto Sans';
          font-style: normal;
          font-weight: 700;
          font-size: 24px;
          line-height: 33px;
          width:74%;
          text-align: left;
          color: #FFFFFF;">
                                        @slider.Title
                                    </h5>
                                    <a asp-controller="Home" asp-action="DetailSlider" asp-route-id="@slider.Id" class="btn" style="    background: #F186B6;
                                        padding: 9px 52px 32px 52px;
                                        border-radius: 25px;
                                        float: right;
                                        /* width: 146px; */
                                        height: 32px; color:#FFFFFF;">Ətraflı bax</a>
                                </div>
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

            </div>
        </div>
    </div>
    <div class="container my-5" id="CustomerGrid">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 my-4">
                <h1 style="font-family: 'Noto Sans';
                font-style: normal;
                font-weight: 700;
                font-size: 24px;
                line-height: 33px;
                margin-bottom: 60px;
                 margin-top: 30px;


                color: #383838;">
                    Əmək müqaviləsinin faydaları:
                </h1>
                <div class="row" id="myList">
                    @foreach (Contract contract in Model.Contracts)
                    {
                        <div class="col-md-3 col-sm-12 my-3 kart">
                            <div class="box d-flex p-4 h-100 flex-column text-center " style="width: 18rem;border:none;background-color: #F3F3F3; border-radius:10px;">

                                @*<div class="card-body" style="background: #F3F3F3;
                                    border-radius: 10px;  width: 298px;
                                    height: 368px;">*@
                                <div class="text-center h-75 my-5">
                                    @Html.Raw(contract.Svg)


                                    <p class="card-text" style="margin-top: 55px;
                                text-align: center;
                                font-style: normal;
                                font-weight: 500;
                                font-size: 20px;
                                line-height: 22px;
                                text-align: center;
                                color: #383838;">
                                        @contract.Text
                                    </p>
                                </div>

                                <a href="javascript:;" data-id="@contract.Id" class="btn details  mt-auto"
                                   style="background-color:#00AAE2;border-radius:25px;padding: 6px 60px; margin-top:60px;">
                                    Ətraflı
                                    bax
                                </a>


                            </div>
                        </div>
                        @*</div>*@
                    }
                    @await Component.InvokeAsync("Modal")

                </div>

            </div>
            <div class="row">
                <div class="col-lg-12 my-5 d-flex justify-content-end">
                    <a asp-controller="Contract" asp-action="Index" class=" btn btn-info text-decoration-none " style="font-family: 'Noto Sans';
                    font-style: normal;
                    font-weight: 500;
                    font-size: 16px;
                    line-height: 22px;
                    text-align: right;
                    color: #F3F3F3;">
                        Hamısına bax
                    </a>
                </div>

            </div>
        </div>
    </div>
    <div class="container ">
